## Calculator

# cpoy to shell launch

while True:
   print("Options:")
   print("Enter '1' to add two numbers")
   print("Enter '2' to subtract two numbers")
   print("Enter '3' to multiply two numbers")
   print("Enter '4' to divide two numbers")
   print("Enter '0' to end the program")
   user_input = str( input(": "))

   if user_input == "0":
      break
   
   elif user_input == "1":
      num1 = float(input("Enter a munber:"))
      num2 = float(input("Enter another number:"))
      result =str(num1 + num2)
      print("the result is:" + result)

   elif user_input == "2":
      num1 = float(input("Enter a munber:"))
      num2 = float(input("Enter another number:"))
      result =str(num1 - num2)
      print("the result is:" + result)

   elif user_input == "3":
      num1 = float(input("Enter a munber:"))
      num2 = float(input("Enter another number:"))
      result =str(num1 * num2)
      print("the result is:" + result) 

   elif user_input == "4":
      num1 = float(input("Enter a munber:"))
      num2 = float(input("Enter another number:"))
      result =str(num1 / num2)
      print("the result is:" + result)

   else:
      print("Unkonw input")
